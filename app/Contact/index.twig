{% extends 'default_frame.twig' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block javascript %}
    <script src="{{ asset('assets/js/postalcode.js') }}" charset="UTF-8"></script>
{% endblock javascript %}

{% block main %}
<link href="{{ asset('assets/css/contact.css') }}" rel="stylesheet" type='text/css'>
	<!-- contact -->
	<div class="contact">
            <div class="container">
                <h2 class="agileits-title">Contact Us</h2>
                <div class="col-md-8 w3_agile_mail_left">
                    <div class="agileits_mail_grid_right1 agile_mail_grid_right1">
                        <form method="post" action="{{ url('contact') }}" novalidate>
                            {{ form_widget(form._token) }}
                            <span>
                                <i>{{ form_label(form.name, 'common.name', { 'label_attr': { 'class': 'ec-label' }}) }}</i>
                                <div class="ec-halfInput{{ has_errors(form.name.name01, form.name.name02) ? ' error' }}">
                                    {{ form_widget(form.name.name01, {'attr': { 'placeholder': 'common.last_name' }}) }}
                                    {{ form_widget(form.name.name02, {'attr': { 'placeholder': 'common.first_name' }}) }}
                                    {{ form_errors(form.name.name01) }}
                                    {{ form_errors(form.name.name02) }}
                                </div>
                            </span>
                            {{ form_widget(form.kana.kana01, { type : 'hidden', value: 'カナ'}) }}
                            {{ form_widget(form.kana.kana02, { type : 'hidden', value: 'カナ'}) }}
                            <span>
                                <i>{{ form_label(form.email, 'common.mail_address', { 'label_attr': { 'class': 'ec-label' }}) }}</i>
                                <div class="ec-input{{ has_errors(form.email) ? ' error' }}">
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </span>
                            <span>
                                <i>{{ form_label(form.phone_number, 'common.phone_number', { 'label_attr': { 'class': 'ec-label' }}) }}</i>
                                <div class="ec-telInput{{ has_errors(form.phone_number) ? ' error' }}">
                                    {{ form_widget(form.phone_number) }}
                                    {{ form_errors(form.phone_number) }}
                                </div>
                            </span>
                            <span>
                                <i>{{ form_label(form.email, 'front.contact.inquiry_contents', { 'label_attr': { 'class': 'ec-label' }}) }}</i>
                                <div class="ec-input{{ has_errors(form.contents) ? ' error' }}">
                                    {{ form_widget(form.contents) }}
                                    {{ form_errors(form.contents) }}
                                </div>
                                
                            </span>
                            
                            <div class="w3_submit">
                                <button type="submit" class="ec-blockBtn--action" name="mode" value="confirm">{{ 'common.go_to_confirm'|trans }}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4 w3_agile_mail_right">
                    <div class="w3_agileits_mail_right_grid">
                        <h4>About Us </h4>
                        <p>Donec libero lectus, feugiat vel elit nec, mattis tempor mi ante.</p>
                        <!-- <h5>Follow Us On</h5>
                        <div class="social-wthree-icons">
                            <ul>
                                <li><a href="#" class="fa fa-facebook icon icon-border facebook"> </a></li>
                                <li><a href="#" class="fa fa-twitter icon icon-border twitter"> </a></li>
                                <li><a href="#" class="fa fa-google-plus icon icon-border googleplus"> </a></li>
                                <li><a href="#" class="fa fa-dribbble icon icon-border dribbble"> </a></li> 
                            </ul>
                            <div class="clearfix"> </div>
                        </div>  -->
                        <div class="w3_agileits_mail_right_grid_pos">
                            <img src="{{ asset('assets/images/t3.jpg') }}" alt=" " class="img-responsive" />
                        </div>
                    </div>
                    <div class="w3_agileits_mail_right_grid_main">
                        <div class="w3layouts_mail_grid_left">
                            <div class="w3layouts_mail_grid_left1 hvr-radial-out">
                                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                            </div>
                            <div class="w3layouts_mail_grid_left2">
                                <h3>Mail Us</h3>
                                <a href="mailto:info@example.com">{{BaseInfo.email01}}</a>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="w3layouts_mail_grid_left">
                            <div class="w3layouts_mail_grid_left1 hvr-radial-out">
                                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            </div>
                            <div class="w3layouts_mail_grid_left2">
                                <h3>Address</h3>
                                <p>{{BaseInfo.addr01}} {{BaseInfo.addr01}}</p>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="w3layouts_mail_grid_left">
                            <div class="w3layouts_mail_grid_left1 hvr-radial-out">
                                <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>
                            </div>
                            <div class="w3layouts_mail_grid_left2">
                                <h3>Phone</h3>
                                <p>{{BaseInfo.phone_number}}</p>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        <div class="map-grid">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.0804734635735!2d106.66400171519093!3d10.805148492302045!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175292e081b95d7%3A0xeb029dbbd65f5cb7!2sTPS+Software+Corporation!5e0!3m2!1sen!2s!4v1563264693883!5m2!1sen!2s" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
